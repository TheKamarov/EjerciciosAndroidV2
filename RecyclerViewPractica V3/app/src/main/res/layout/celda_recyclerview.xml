<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/CeldaRecyclerView_RelativeLayout_ParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/CeldaRecyclerView_ImageView_CountryImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/CeldaRecyclerView_TextView_CountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canada"
        android:textColor="#000"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/CeldaRecyclerView_ImageView_CountryImage"
        android:layout_centerVertical="true"/>

</RelativeLayout>
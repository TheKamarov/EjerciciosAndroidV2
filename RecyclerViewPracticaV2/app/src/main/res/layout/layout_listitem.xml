<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_listitem_RelativeLayout_ParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/layout_listitem_CircleImageView_Image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/layout_listitem_TextView_Pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canada"
        android:layout_toRightOf="@id/layout_listitem_CircleImageView_Image"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:textSize="17sp">
    </TextView>

</RelativeLayout>
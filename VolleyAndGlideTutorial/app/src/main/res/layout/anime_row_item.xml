<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/AnimeRowItem_LinearLayout_ParentLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/AnimeRowItem_ImageView_Thumbnail"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/loading_shape"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/AnimeRowItem_TextView_AnimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime Title"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/AnimeRowItem_TextView_AnimeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/AnimeRowItem_TextView_AnimeRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_marginTop="10dp"
            android:background="@drawable/rating_background"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:id="@+id/AnimeRowItem_TextView_AnimeStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>